{
    "compilerOptions": {
        "module": "amd",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es2017",
            "dom"
        ],
        "outDir": "dist/test",
        "noImplicitAny": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "noEmitHelpers": false,
        "stripInternal": true,
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "ol": ["node_modules/ol/src"],
            "ol/*": ["node_modules/ol/src/*"]
        }
    },
    // "include": [
    //     // Include javascript files from the ol package
    //     "node_modules/ol/**/*.js"
    // ],
    "exclude": [
        ".vscode",
        "dist",
        "doc",
        "node_modules"
    ],
    "typeRoots": [
        "./node_modules/@types/"
    ]
}
